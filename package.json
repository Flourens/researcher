{
  "name": "@researcher/root",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @researcher/backend dev",
    "build": "pnpm -r build",
