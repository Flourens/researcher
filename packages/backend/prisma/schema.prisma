// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
  grants    Grant[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
  data      String?
}

model Grant {
  id                    String    @id @default(cuid())
  userId                String
  user                  User      @relation(fields: [userId], references: [id])
  title                 String
  grantText             String
  analysisResult        String?
  feasibilityResult     String?
  proposalResult        String?
  reviewResult          String?
  applicationPackage    String?
  status                String    @default("draft")
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model AgentRun {
  id              String   @id @default(cuid())
  agentName       String
  grantTitle      String?
  iteration       Int      @default(1)
  success         Boolean
  score           Float?
  maxScore        Float?
  inputTokens     Int?
  outputTokens    Int?
  executionTimeMs Int?
  model           String?
  stopReason      String?
  errorMessage    String?
  summary         String?
  feedback        String?
  createdAt       DateTime @default(now())
}
